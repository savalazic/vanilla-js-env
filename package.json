{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "",
  "author": "Sava Lazic",
  "license": "MIT",
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "prestart": "babel-node buildScripts/startMessage.js",
    "start": "npm-run-all --parallel security-check open:src watch-css lint:watch",
    "open:src": "babel-node buildScripts/srcServer.js",
    "lint": "esw webpack.config.* src buildScripts --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "flow": "flow",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000",
    "share": "npm-run-all --parallel open:src localtunnel",
    "generate-mock-data": "babel-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 8081",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel buildScripts/build.js | node",
    "postbuild": "babel buildScripts/distServer.js | node"
  },
  "jest": {
    "verbose": true,
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "compression": "^1.7.2",
    "express": "^4.16.3",
    "json-schema-faker": "^0.5.0-rc14",
    "open": "^0.0.5",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.3",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "cross-env": "3.1.3",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-watch": "2.1.14",
    "extract-text-webpack-plugin": "1.0.1",
    "flow-bin": "^0.69.0",
    "flow-remove-types": "^1.2.3",
    "html-webpack-plugin": "2.22.0",
    "jest": "^22.4.3",
    "jsdom": "9.8.0",
    "json-server": "0.8.22",
    "localtunnel": "1.8.1",
    "node-sass-chokidar": "^1.2.2",
    "npm-run-all": "^4.1.2",
    "nsp": "^3.2.1",
    "prettier": "^1.11.1",
    "remove-flow-types-loader": "^1.1.0",
    "rimraf": "2.5.4",
    "style-loader": "^0.20.3",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0",
    "webpack-md5-hash": "0.0.5"
  }
}
